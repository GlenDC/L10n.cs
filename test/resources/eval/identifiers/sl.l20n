<plural($n) {
  $n == 0 ? "zero" :
  $n % 100 == 1 ? "one" :
  $n % 100 == 2 ? "two" :
  $n % 100 == 3 || $n % 100 == 4 ? "few" :
  "many"
}>
<_hours {
  one: "ura",
  two: "uri",
  few: "ure",
  *many: "ur"
}>
<_minutes {
  one: "minuta",
  two: "minuti",
  few: "minute",
  *many: "minut"
}>
<_seconds {
  one: "sekunda",
  two: "sekundi",
  few: "sekunde",
  *many: "sekund"
}>
<remaining "
  Preostali Äas: {{ @hour }} {{ _hours[plural(@hour)] }},
  {{ @minute }} {{ _minutes[plural(@minute)] }},
  {{ @second }} {{ _seconds[plural(@second)] }}.
  ">
