<hello "Hello, World!">
<time "{{ @hour }}:{{ @minute }}:{{ @second }}">
<date "{{ @day }}/{{ @month }}/{{ @year }}">

<get_greeting($time) {
    $time < 12 ? morning :
        $time < 18 ? afternoon : evening
}>

<greeting[get_greeting(@hour)] {
    morning: "Good Morning",
    afternoon: "Good Afternoon",
    evening: {
        *normal: "Good Evening",
        late: "Good Night",
    },
}>

<timeDateGreeting "{{ greeting }}, it's {{ time }} on {{ date }}.">
